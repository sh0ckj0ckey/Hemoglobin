<Window x:Class="Hemoglobin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemoglobin"
        xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
        mc:Ignorable="d"
        Title="Hemoglobin" Height="450" Width="800" ResizeMode="CanResize"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" Topmost="True">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="8"
                      GlassFrameThickness="0"
                      NonClientFrameEdges="None"
                      ResizeBorderThickness="6"/>
    </WindowChrome.WindowChrome>

    <Border CornerRadius="8" Margin="8" BorderThickness="1" BorderBrush="#10FFFFFF" Background="#212529"
            MouseLeftButtonDown="Border_MouseLeftButtonDown" UseLayoutRounding="True">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Direction="270" BlurRadius="12" ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>
        <Grid Background="Transparent">
            <Rectangle Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                       Margin="4"
                       RadiusX="4" RadiusY="4"
                       Fill="#80A43126"
                       StrokeThickness="2"
                       Stroke="#8CFFFFFF"
                       StrokeDashArray="4"/>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="AppTitleImage" Height="64" VerticalAlignment="Center"
                       Source="/Hemoglobin;Component/Assets/Icons/Logo.png"
                       xf:Animations.Primary="{xf:Animate BasedOn={StaticResource Grow}, Duration=2000}"
                       xf:Animations.IterationBehavior="Forever"/>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock x:Name="AppTitleTextBlock" Foreground="White" Text="Hemoglobin" FontFamily="Century" FontWeight="Bold" FontSize="24" Margin="10,0,0,0"/>
                    <TextBlock x:Name="AppNoteTextBlock" Foreground="White" Text="Drag text, picture or file here" FontFamily="Century" FontSize="15" Margin="12,4,0,0" Opacity="0.7"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
